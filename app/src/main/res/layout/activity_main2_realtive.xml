<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Main2ActivityRealtive">

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="R E D"
        android:background="#e40206"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:text="YELLOW"
        android:background="#f7e709"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="#e6ed560a"
        android:layout_centerHorizontal="true"
        android:text="ORANGE"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:background="#48cc20"
        android:text="GREEN" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#4386c9"
        android:text="BLUE"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="35dp"
        android:background="#591a80"
        android:text="INDIGO" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#f512e6"
        android:text="VIOLET"/>

</RelativeLayout>